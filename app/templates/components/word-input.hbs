{{yield quizzes}}

<div id="word-input">
  <ul>
    {{#each inputs as |input index|}}
      <li>
        <input type="text" placeholder="Word" value={{input.word}} >
        <input type="text" placeholder="Answer" value={{input.answer}} >
        {{#if (eq index (subtract inputs.length 1) ) }}
          <a {{action 'addrow'}} class="btn btn-default">Add</a>
        {{else}}
          <span {{action 'removerow' index}} class="glyphicon glyphicon-remove"></span>
        {{/if}}
      </li>
    {{/each}}
  </ul>
</div>
