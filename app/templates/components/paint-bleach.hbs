<div id="paint-bleach" class="row">
  <div class="col-sm-6">
    <img src={{imgsrc}}  />
    <div class="prop">
      <input type="file" accept="image/png,image/jpeg,image/jpg"
        onchange={{action "upload"}} multiple="false"/>
    </div>
  </div>
  <div class="col-sm-6">
    <canvas></canvas>
    <div class="prop">
      <span>{{t 'paint.degree' }} : {{degree}}</span>
      <input type="range"  min="0" max="255" value={{degree}} {{action "bleach" on="change"}}/>
      <a href="#" class="btn btn-default" onclick={{action 'download' }} >{{t 'download' }}</a>
    </div>
  </div>
</div>
